<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/meal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/meal_name_hint"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="116dp"
                android:layout_marginBottom="2dp"
                android:text="Cooking Procedure"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cooking_procedure"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meal_text" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="224dp"
                android:layout_marginBottom="2dp"
                android:text="@string/amount_of_calorie"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/amount_calorie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meal_text" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="292dp"
                android:layout_marginBottom="2dp"
                android:text="Amount of Fats"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/amount_fats"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meal_text" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="352dp"
                android:layout_marginBottom="2dp"
                android:text="Amount of Vitamins"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/amount_vitamins"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meal_text" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="61dp"
                android:text="Ingredients"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meal_text" />

            <TextView
                android:id="@+id/meal_name"
                android:layout_width="260dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp"
                android:text="Text"
                app:layout_constraintBottom_toTopOf="@+id/ingredients"
                app:layout_constraintStart_toEndOf="@+id/meal_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="261dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="12dp"
                android:text="Text"
                app:layout_constraintBottom_toTopOf="@+id/cooking_procedure"
                app:layout_constraintStart_toEndOf="@+id/meal_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cooking_procedure"
                android:layout_width="261dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="164dp"
                android:layout_marginBottom="17dp"
                android:text="Text"
                app:layout_constraintBottom_toTopOf="@+id/textView47"
                app:layout_constraintStart_toEndOf="@+id/meal_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/amount_calorie"
                android:layout_width="262dp"
                android:layout_height="31dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="280dp"
                android:layout_marginBottom="9dp"
                android:text="Text"
                app:layout_constraintBottom_toTopOf="@+id/textView50"
                app:layout_constraintStart_toEndOf="@+id/meal_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/amount_fats"
                android:layout_width="262dp"
                android:layout_height="31dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="340dp"
                android:layout_marginBottom="9dp"
                android:text="Text"
                app:layout_constraintBottom_toTopOf="@+id/textView53"
                app:layout_constraintStart_toEndOf="@+id/meal_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/amount_vitamins"
                android:layout_width="262dp"
                android:layout_height="31dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="408dp"
                android:layout_marginBottom="10dp"
                android:text="Text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/meal_text"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>